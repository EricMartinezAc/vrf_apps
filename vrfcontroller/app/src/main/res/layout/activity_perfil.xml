<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_perfil"
    tools:context="com.vrfing.vrfcontroller.PerfilActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="100dp">




        <LinearLayout
            android:layout_gravity="center"
            android:background="@android:color/holo_orange_dark"
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginRight="10dp"
                android:id="@+id/main_fabPrincipalMenu"
                android:background="@drawable/setting2_ico"
                android:layout_marginLeft="10px"
                android:layout_marginTop="10px"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:fontFamily="monospace"
                android:id="@+id/perfil_txtEmail"
                android:paddingLeft="20px"
                android:textColor="@android:color/white"
                android:text="usuario desconocido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




        </LinearLayout>







        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/principalLayout"
                android:paddingTop="20px"
                android:layout_width="match_parent"
                android:layout_height="match_parent">




                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:paddingLeft="15px"
                    android:paddingRight="15px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">






                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:paddingTop="20px"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="400px">

                            <TextView
                                android:text="   "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:background="@android:color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="180dp"
                                    android:layout_height="108dp"
                                    app:srcCompat="@drawable/clientes"
                                    android:id="@+id/imgbtn_Clientes" />

                                <TextView
                                    android:background="@android:color/black"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/holo_orange_dark"
                                    android:text="COMERCIAL"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>


                            <TextView
                                android:text="   "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <LinearLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@android:color/black"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="180dp"
                                    android:layout_height="108dp"
                                    app:srcCompat="@drawable/mtto12"
                                    android:id="@+id/imgbtn_tecnicos" />

                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@android:color/holo_orange_dark"
                                    android:text="TÉCNICOS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView2" />



                            </LinearLayout>


                            <TextView
                                android:text="   "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@android:color/black"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="180dp"
                                    android:layout_height="108dp"
                                    app:srcCompat="@drawable/apoyotecnico"
                                    android:id="@+id/imgbtn_asesoriaTec" />

                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@android:color/holo_orange_dark"
                                    android:text="ASISTENCIA TÉCNICA"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />


                            </LinearLayout>


                            <TextView
                                android:text="   "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />



                            <LinearLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@android:color/black"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="180dp"
                                    android:layout_height="108dp"
                                    app:srcCompat="@drawable/fondo5"
                                    android:id="@+id/imgbtn_Analistas" />

                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@android:color/holo_orange_dark"
                                    android:text="ANALISTAS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />


                            </LinearLayout>

                        </LinearLayout>

                    </HorizontalScrollView>

                    <ScrollView
                        android:paddingTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">


                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <Button
                                    android:id="@+id/btn_goToPagInventario"
                                    style="@style/Widget.AppCompat.Button.Small"
                                    android:layout_width="60dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/inventario"
                                    android:onClick="onClick" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""/>

                                <Button
                                    android:background="@drawable/libropendientes_ico"
                                    android:layout_width="60dp"
                                    android:layout_height="48dp"
                                    style="@style/Widget.AppCompat.Button.Small" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""/>




                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <Button
                                    android:id="@+id/main_btn_inventario_herramientas"
                                    android:background="@drawable/ganttcronograma_ico"
                                    android:layout_width="60dp"
                                    android:layout_height="48dp"
                                    style="@style/Widget.AppCompat.Button.Small" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""/>
                                <Button
                                    android:background="@drawable/logovrf"
                                    android:layout_width="60dp"
                                    android:layout_height="48dp"
                                    style="@style/Widget.AppCompat.Button.Small" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""/>




                            </LinearLayout>


                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <Button

                                    android:id="@+id/main_btn_inventario_bodega"
                                    android:background="@drawable/gestiontecnica_ico"
                                    android:layout_width="60dp"
                                    android:layout_height="48dp"
                                    style="@style/Widget.AppCompat.Button.Small" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""/>

                                <Button
                                    android:background="@drawable/termohigometrofluke_ico"
                                    android:layout_width="60dp"
                                    android:layout_height="48dp"
                                    style="@style/Widget.AppCompat.Button.Small" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""/>

                            </LinearLayout>




                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""/>


                        </LinearLayout>



                    </ScrollView>

                </LinearLayout>


            </RelativeLayout>
        </ScrollView>

    </LinearLayout>
    <ListView
        android:id="@+id/ListarMetodos"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/fondo_main_clientes">

    </ListView>

</androidx.drawerlayout.widget.DrawerLayout>