<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

//contenedor de celda
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <ImageView
                        android:gravity="center"
                        android:textAlignment="center"
                        android:src="@drawable/inventario"
                        android:id="@+id/herramientas_itemlist_imagen"
                        android:layout_width="90dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:text="ID: "
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:textStyle="bold"
                                android:fontFamily="monospace"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:id="@+id/herramientas_itemlist_id"
                                android:textSize="20dp"
                                android:text="xxxx"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"  />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:text="Nombre:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/herramientas_itemlist_nombre"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:text="xxxx"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"  />



                        </LinearLayout>

                    </LinearLayout>




                </LinearLayout>

      // fin de celda





                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Tipo: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/herramientas_itemlist_clase"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="xxxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Marca: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/herramientas_itemlist_marca"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="xxxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Modelo: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/herramientas_itemlist_modelo"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="xxxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Referencia: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/herramientas_itemlist_referencia"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="xxxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Capacidad: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/herramientas_itemlist_capacidad"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="xxxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Cantidad: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/herramientas_itemlist_cantidad"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="xxxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Estado: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/herramientas_itemlist_estado"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="xxxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Responsable: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/herramientas_itemlist_personaACargo"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="xxxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Cédula: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/herramientas_itemlist_presonaACargoCedula"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="xxxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Descripción: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />


                    <EditText
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/herramientas_itemlist_descripcion"
                        android:text="xxxxxxxxxxxxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textMultiLine" />



                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/holo_orange_light"/>



            </LinearLayout>


        </LinearLayout>


</LinearLayout>